<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relaly_actionbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@color/white_90alpha" >

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ibtn_right"
        android:layout_toRightOf="@+id/ibtn_left"
        android:gravity="center"
        android:textColor="@color/near_black"
        android:textAllCaps="true"/>
    
    <ImageView
        android:id="@+id/iv_title_logo"
        android:layout_width="@dimen/viewActionBar_ImageView_width"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/ibtn_right"
        android:layout_toRightOf="@+id/ibtn_left"
        android:gravity="center" />

    <ImageButton
        android:id="@+id/ibtn_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:background="@null"
        android:scaleType="centerInside"
        android:adjustViewBounds="true"

         />
    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/viewActionBar_TextView_padding"
        android:minWidth="@dimen/viewActionBar_TextView_width"
        android:gravity="center"
        />

    <ImageButton
        android:id="@+id/ibtn_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingRight="@dimen/viewActionBar_ImageButton_padding" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:minWidth="@dimen/viewActionBar_TextView_width"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/viewActionBar_TextView_padding"
        android:layout_marginRight="@dimen/viewActionBar_TextView_padding"
        android:gravity="center"
        />

</RelativeLayout>
